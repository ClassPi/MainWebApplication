@{
    ViewData["Title"] = "注册 --星雨落";
    Layout = null;
    //q:what is sidebar-gone`s work in bootstrap5?a:it is a class to hide the sidebar
    //q:what is col-5`s work in bootstrap5? a:it is a class to set the width of the element
    //q:how to use needs-validation? a:it is a class to validate the form
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">-->
    <link rel="stylesheet" href="~/css/YcqHome.css" asp-append-version="true" />
</head>
<body class="sidebar-gone">
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-lg-10 col-md-8 col-sm-12  offset-md-2 col-xl-10 offset-xl-1">

                        <div class="card card-primary">
                            <div class="card-header ps-4">
                                <h4>注册</h4>
                            </div>
                            <div class="padding-set ps-4 pe-4">

                                <!--create a login form-->
                                <form class="needs-validation" method="post" autocomplete="off" novalidate>
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-sm-12 col-xs-12">
                                            <label for="name">昵称</label>
                                            <input id="name" type="text" class="form-control" name="name" required autofocus="" autocomplete="off" value="" pattern="^[\w\u4e00-\u9fa5]{3,9}$">
                                            <div class="invalid-feedback" id="name-invalid">
                                                请输入正确昵称
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-6 col-sm-12 col-xs-12">
                                            <label for="useremail">邮箱</label>
                                            <input id="useremail" type="email" pattern="^(.+)@@(.+)\.(com|net|org|cn)$" class="form-control" name="useremail" aria-label="Username" required>
                                            <div class="invalid-feedback" id="email-invalid">请输入邮箱</div>
                                        </div>
                                    </div>
                                    <!--
                                    <div class="row"><div class="form-group col-lg-6 col-sm-12 col-xs-12">
                                        <label for="valid_code">邮箱验证码</label>
                                        <div class="input-group">
                                            <input name="valid_code" id="email_code" type="text" class="form-control me-2">
                                            <div class="input-group-append">
                                                <button id="email_verify" class="btn btn-primary" type="button" style="height:42px;">发送</button>
                                            </div>
                                            <div class="invalid-feedback">
                                                请填写邮箱验证码
                                            </div>
                                        </div>
                                        </div>
                                    </div>-->
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-sm-12 col-xs-12">
                                            <label for="passwd" class="d-block">密码</label>
                                            <input id="passwd" type="password" class="form-control" name="passwd" required pattern="^[a-zA-Z0-9\w]{5,17}$">
                                            <div id="pwindicator" class="pwindicator pw-weak">
                                                <div class="bar"></div>
                                                <div class="label"></div>
                                            </div>
                                            <div class="invalid-feedback" id="password-invalid">
                                                密码为6-20位的字母数字下划线组合
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-6 col-sm-12 col-xs-12">
                                            <label for="repasswd" class="d-block">确认密码</label>
                                            <input id="repasswd" type="password" class="form-control" name="repasswd" required pattern="^[a-zA-Z0-9\w]{5,17}$">
                                            <div class="invalid-feedback " id="repassword-invalid">
                                                请重新输入密码
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row ">
                                        <div class="form-group col-12">
                                            <div id="robot" style="width:304px"></div>
                                            <div class="invalid-feedback " id="robot-invalid"></div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group">
                                            <div class="custom-control">
                                                <input type="checkbox" name="agree" id="agree" checked="checked" required="">
                                                <label class="custom-control-label align-middle custom-checkbox fw-light" for="agree">注册即代表同意 <a href="/tos" target="blank">服务条款</a></label>
                                                <div class="invalid-feedback">
                                                    请阅读服务条款并勾选
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="register-button" class="form-group align-items-center">
                                        <button class="btn btn-primary btn-lg btn-block" tabindex="4" id="registerButton" type="submit">
                                            注册
                                        </button>
                                    </div>

                                </form>
                            </div>
                            <div class="alert alert-danger m-4 text-center fs-7 fw-bold" id="login-message" style=" letter-spacing: 0.5px " role="alert">
                            </div>
                        </div>
                        <div class="mt-5 text-muted text-center fs-7">已经有了账号🤩👍<a href="/auth/login">马上登录!</a></div>
                        <div class="simple-footer">
                            注册时遇到问题？邮箱联系管理员：<br>keaixiaosixong@gmail.com
                        </div>
                    </div>


                </div>
            </div>
        </section>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--<script src="https://www.recaptcha.net/recaptcha/api.js?onload=onloadCallback&render=explicit" async></script>-->
    <script src="~/js/register.js" asp-append-version="true"></script>
    <script src="~/js/inputValid.js" asp-append-version="true"></script>
    <!--<script src="~/js/recaptcha.js" asp-append-version="true" defer></script>-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>